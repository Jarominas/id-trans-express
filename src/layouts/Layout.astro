

---
import Header from "../components/Header/Header.jsx";
import '../styles/global.css';

const currentLocale = Astro.currentLocale || "et";
const currentPath = Astro.url.pathname;

const { 
  title = "Custom astro", 
  description = "An Astro site with React components" 
} = Astro.props;
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <div class="min-h-screen bg-white">
                <Header client:load currentLocale={currentLocale} currentPath={currentPath}/>
                <slot />
        </div>
    	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
